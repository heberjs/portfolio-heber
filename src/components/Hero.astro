---
import LinkedInIcon from "@/icons/LinkedInIcon.astro";
import SocialPill from "./SocialPill.astro";
import GithubIcon from "@/icons/GithubIcon.astro";
import MailIcon from "@/icons/MailIcon.astro";
import Badge from "./Badge.astro";
---

<div class="max-w-xl">
    <img
        class="rounded-full size-20 mb-4 md:object-cover hover:scale-150 transition"
        src="/perfilheber.jpeg"
        alt="perfil heber"
    />
    <h1
        class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
    >
        Welcome!, I'm Heber

        <a
            href="https://www.linkedin.com/in/heber-sanchez"
            target="_blank"
            rel="noopener"
            class="flex items-center transition md:justify-center md:hover:scale-105"
        >
            <Badge> Available for hire</Badge>
        </a>
    </h1>
    <h2 class="text-xl lg:text-2xl text-wrap max-x-[700px]">
        <span class="opacity-80">Full Stack Developer </span><span
            class="text-yellow-200 opacity-80"
            >| Stack MERN | JavaScript - TypeScript | Node js | React | Mongo |
            Express | TDD | JWT.
        </span>
        <div class="text-red-400 placeholder-opacity-85">
            Based in Barcelona, Spain.
        </div>
    </h2>
    <ul>
        <nav class="flex gap-x-4 mt-8 flex-wrap">
            <SocialPill href="https://www.linkedin.com/in/heber-sanchez">
                <LinkedInIcon class="size-4 md:size-6" />
                LinkedIn
            </SocialPill>
            <SocialPill href="https://github.com/heberjs">
                <GithubIcon class="size-4 md:size-6" />
                Github
            </SocialPill>
            <SocialPill href="mailto:heberjsanchez@gmail.com">
                <MailIcon class="size-4 md:size-6" />
                heberjsanchez@gmail.com
            </SocialPill>
        </nav>
    </ul>
</div>
